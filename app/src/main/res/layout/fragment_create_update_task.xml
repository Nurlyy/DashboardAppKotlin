<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CreateUpdateTaskFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTop"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:text="Create a task"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:hint="enter task name"
            app:layout_constraintTop_toBottomOf="@id/tvTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/etTaskName"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:lines="1"
            android:hint="enter task description"
            app:layout_constraintTop_toBottomOf="@id/etTaskName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/etTaskDesc"/>

        <LinearLayout
            android:id="@+id/linearLayoutDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/etTaskDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <DatePicker
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="-30dp"
                android:layout_marginRight="-30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/datePicker"/>
            <TimePicker
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                app:layout_constraintStart_toEndOf="@id/datePicker"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_marginLeft="-30dp"
                android:layout_marginRight="-30dp"
                android:id="@+id/timePicker"/>

        </LinearLayout>




        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pick a file"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutDateTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnPickFile"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnPickFile"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/linearLayoutUri"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:id="@+id/tvFileUri"
                android:text="uri"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_delete"
                android:id="@+id/ivDelete"/>

        </LinearLayout>


        <CheckBox
            android:id="@+id/checkBoxNotification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notification"
            app:layout_constraintTop_toBottomOf="@id/btnPickFile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="45dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save Task"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="25sp"
            android:id="@+id/btnSaveTask"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>